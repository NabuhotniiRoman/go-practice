{
  "server": {
    "host": "localhost",
    "port": 8080,
    "environment": "development",
    "log_level": "debug",
    "log_format": "json",
    "read_timeout": "30s",
    "write_timeout": "30s",
    "idle_timeout": "120s"
  },
  "database": {
    "driver": "postgres",
    "host": "localhost",
    "port": 5432,
    "name": "go_practice",
    "user": "oidc_api_user",
    "password": "your_password_here",
    "ssl_mode": "disable",
    "max_open_connections": 25,
    "max_idle_connections": 5,
    "connection_max_lifetime": "5m"
  },
  "oidc": {
    "provider": {
      "issuer_url": "https://your-oidc-provider.com",
      "client_id": "your_client_id_here",
      "client_secret": "your_secret_here",
      "redirect_url": "http://localhost:8080/auth/callback",
      "post_logout_redirect_url": "http://localhost:8080"
    },
    "tokens": {
      "signing_key": "your_jwt_signing_key_here",
      "signing_method": "HS256",
      "access_token_duration": "1h",
      "refresh_token_duration": "24h",
      "id_token_duration": "1h"
    },
    "scopes": [
      "openid",
      "profile",
      "email"
    ]
  },
  "security": {
    "cors": {
      "allowed_origins": [
        "http://localhost:3000",
        "http://localhost:8080",
        "http://127.0.0.1:3000"
      ],
      "allowed_methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "OPTIONS"
      ],
      "allowed_headers": [
        "Content-Type",
        "Authorization",
        "X-Requested-With"
      ],
      "allow_credentials": true,
      "max_age": 3600
    },
    "rate_limit": {
      "enabled": true,
      "requests_per_minute": 100,
      "burst": 20
    },
    "session": {
      "secret": "your_session_secret_here_change_in_production",
      "max_age": 7200,
      "secure": false,
      "http_only": true
    }
  },
  "redis": {
    "enabled": false,
    "host": "localhost",
    "port": 6379,
    "password": "",
    "database": 0,
    "max_retries": 3,
    "pool_size": 10
  }
}
